{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build LÖVE",
            "type": "process",
            "command": "makelove",
            "args": [
                "--config",
                "../build/makeall.toml"
            ],
            "options": {
                "cwd": "${workspaceFolder}/game"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build LÖVE Web",
            "type": "process",
            "command": "makelove",
            "args": [
                "--config",
                "../build/makeweb.toml"
            ],
            "options": {
                "cwd": "${workspaceFolder}/game"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}